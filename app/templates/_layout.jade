doctype html
html

  block link
    -var selected = 'index'; //default

  include includes/_head

  if selected === 'index'
    title Pleeease &middot; Process CSS with ease
    meta(name='description',content='Combine CSS preprocessors (Sass, LESS or Stylus) with PostCSS')
  else if selected === 'docs'
    title Pleeease &middot; Documentation
    meta(name='description',content='Configure Pleeease and learn how to use it.')
  else if selected === 'workflow'
    title Pleeease &middot; Workflow
    meta(name='description',content='Optimize your workflow to save time and effort.')

  body

    header.header
      .header-titles
        h1.header-title
          a(href='/') pleeease
        p.header-version
          a(id='version', href='https://github.com/iamvdo/pleeease/releases',title='See changelog on GitHub') 3.x.x
      h2.header-subtitle Process CSS with ease

    include includes/_menu

    section

      article(class=selected)

        block content

    footer.footer
